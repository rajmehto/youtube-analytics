{
  "manifest_version": 3,
  "name": "YouTube Analytics Vision",
  "version": "1.0.0",
  "description": "Advanced YouTube analytics, SEO insights, tags, and engagement metrics overlay",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.googleapis.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": [
        "scripts/youtube-api.js",
        "scripts/storage-manager.js",
        "scripts/sentiment-analyzer.js",
        "scripts/competitor-analyzer.js",
        "scripts/data-exporter.js",
        "scripts/advanced-features.js",
        "scripts/monetization-analyzer.js",
        "scripts/seo-analyzer.js",
        "scripts/content.js"
      ],
      "css": ["styles/overlay.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://studio.youtube.com/*"],
      "js": ["scripts/studio-content.js"],
      "css": ["styles/studio-assistant.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["styles/*", "scripts/*"],
      "matches": ["*://*.youtube.com/*"]
    }
  ]
}
